<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<RootNamespace>BepisPlugins</RootNamespace>
		
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Nullable>warnings</Nullable>
		<LangVersion>latest</LangVersion>
		
		<OutputPath>$(SolutionDir)bin\Release\BepInEx\patchers</OutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		
		<GenerateAssemblyInfo>False</GenerateAssemblyInfo>

		<DebugType>embedded</DebugType>
		<WarningLevel>9999</WarningLevel>

		<DefineConstants>$(DefineConstants);RG;IL2CPP</DefineConstants>
	</PropertyGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<Delete Files="$(OutputPath)\$(AssemblyName).deps.json" />
	</Target>

	<Import Project="..\Shared\Shared.projitems" Label="Shared" />

	<Import Project="..\Core_ExtensibleSaveFormat_Patcher\Core_ExtensibleSaveFormat_Patcher.projitems" Label="Shared" />

	<ItemGroup>
	  <PackageReference Include="BepInEx.Unity.Mono.Preloader" Version="6.0.0-be.682" />
	  <PackageReference Include="IllusionLibs.RoomGirl.All" Version="2023.2.10" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\RG_ExtensibleSaveFormat\RG_ExtensibleSaveFormat.csproj" />
	</ItemGroup>

</Project>